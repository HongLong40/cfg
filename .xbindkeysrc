#
# Version: 1.8.7
#
# If you edit this file, do not forget to uncomment any lines
# that you change.
# The pound(#) symbol may be used anywhere for comments.
#
# To specify a key, you can use 'xbindkeys --key' or
# 'xbindkeys --multikey' and put one of the two lines in this file.
#
# The format of a command line is:
#    "command to start"
#       associated key
#
#
# A list of keys is in /usr/include/X11/keysym.h and in
# /usr/include/X11/keysymdef.h
# The XK_ is not needed.
#
# List of modifier:
#   Release, Control, Shift, Mod1 (Alt), Mod2 (NumLock),
#   Mod3 (CapsLock), Mod4, Mod5 (Scroll).
#

# The release modifier is not a standard X modifier, but you can
# use it if you want to catch release events instead of press events

# By defaults, xbindkeys does not pay attention with the modifiers
# NumLock, CapsLock and ScrollLock.
# Uncomment the lines above if you want to pay attention to them.

#keystate_numlock = enable
#keystate_capslock = enable
#keystate_scrolllock= enable

# Examples of commands:

"xbindkeys_show" 
  control+shift + q

# Open terminal emulator
"exo-open --launch TerminalEmulator"
    Mod2+Mod4 + Return

# Show rofi applications menu
"rofi -show combi"
    Mod2+Mod4 + p

# ## Workspaces:         Super + 1..9 ➔ goto Workspace 1..9.
$                Shift + Super + 1..9 ➔ move active window to Workspace 1..9.
"wmctrl -s 0"
    Mod2+Mod4 + 1

"wmctrl -r :ACTIVE: -t 0"
    Shift+Mod2+Mod4 + 1

"wmctrl -s 1"
    Mod2+Mod4 + 2

"wmctrl -r :ACTIVE: -t 1"
    Shift+Mod2+Mod4 + 2

"wmctrl -s 2"
    Mod2+Mod4 + 3

"wmctrl -r :ACTIVE: -t 2"
    Shift+Mod2+Mod4 + 3

"wmctrl -s 3"
    Mod2+Mod4 + 4

"wmctrl -r :ACTIVE: -t 3"
    Shift+Mod2+Mod4 + 4

"wmctrl -s 4"
    Mod2+Mod4 + 5

"wmctrl -r :ACTIVE: -t 4"
    Shift+Mod2+Mod4 + 5

"wmctrl -s 5"
    Mod2+Mod4 + 6

"wmctrl -r :ACTIVE: -t 5"
    Shift+Mod2+Mod4 + 6

"wmctrl -s 6"
    Mod2+Mod4 + 7

"wmctrl -r :ACTIVE: -t 6"
    Shift+Mod2+Mod4 + 7

"wmctrl -s 7"
    Mod2+Mod4 + 8

"wmctrl -r :ACTIVE: -t 7"
    Shift+Mod2+Mod4 + 8

"wmctrl -s 8"
    Mod2+Mod4 + 9

"wmctrl -r :ACTIVE: -t 8"
    Shift+Mod2+Mod4 + 9

# Close, Maximize or Minimize the active window

"wmctrl -r :ACTIVE: -b toggle,hidden"
    Mod2+Mod4 + minus

"wmctrl -r :ACTIVE: -b toggle,maximized_vert,maximized_horz"
    Mod2+Mod4 + equal

# Open Browser
"opera"
    Mod2+Mod4 + b

# Open Browser --Private Mode
"opera --private"
    Mod2+Mod4 + h

# Capture Screen
"flameshot gui"
    Mod2 + Print

# Calculator
"galculator"
    Mod2 + XF86Calculator

# Settings Manager
"xfce4-settings-manager"
    Mod2+Mod4 + i

# Volume Control
"pavucontrol"
    Mod2+Mod4 + v

# switch audio
"$HOME/.config/utils/switchaudio"
    Shift+Mod4 + v

# move active window to other screen
"$HOME/.config/utils/moveaw"
    Mod4 + o

# move active window to other workspace - uses rofi to present a ws to select as target
"$HOME/.config/utils/switchws"
    Mod4 + space

