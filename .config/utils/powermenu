#!/bin/zsh

chosen=$(echo "Log Out\nReboot\nPower Off" | \
    rofi \
    -dmenu \
    -i \
    -yoffset -150 \
    -p "‚èª " \
    -theme-str 'inputbar {enabled: false;} window {width: 15%; location: center;} listview {lines: 3;}' )

case $chosen in
    "Log Out")
        herbstclient quit
        ;;
    "Reboot")
        systemctl reboot
        ;;
    "Power Off")
        systemctl poweroff
        ;;
esac

